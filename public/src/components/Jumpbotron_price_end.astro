---
interface Props {
    titulo: string;
    subtitulo: string;
}
const { titulo, subtitulo } = Astro.props;
---

<div class="jumpbotron">
    <div class="titulo">
      <!--ARREGLAR ESTOS TITULOS PARA QUE SE VEA MEJOR -->  
        <h1>{titulo}</h1>
        <h2>{subtitulo}</h2>
    </div>
    <div class="email">
        <form class="email" action="">
            <input class="email" type="email" name="" id="" placeholder="Introduce tu correo electronico"/>
            <input class="boton" type="submit" value="Prueba gratis" />
        </form>
        <p class="email">
            Prueba Shopify gratis, sin tarjeta de crédito. Al ingresar tu correo <br>
            electrónico, aceptas recibir correos electrónicos de marketing de <br>
            Shopify.
        </p>
    </div>
</div>
<style>
    .jumpbotron {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 32px;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        background: #32f0b7;
        background: linear-gradient(90deg, rgba(50, 240, 183, 1) 20%, rgba(61, 235, 107, 1) 50%, rgba(50, 240, 183, 1) 80%);
        padding: 60px;
        color: black;
    }
    div.titulo{
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
    }
    div.email{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 12px;
        padding: 24px 0;
    }
    form.email{
        padding: 6px;
        background-color: white;
        border: transparent 2px;
        border-radius: 30px;
        display: flex;
        justify-content: space-between;
    }
    input.email{
        background-color: transparent;
        width: 600px;
        padding: 6px;
        color: black;
    }
    input.boton{
        background-color: black;
        color: white;
        padding: 18px;
        border: transparent 2px;
        border-radius: 30px;
        font-weight: 700;
    }
    p.email{
        text-align: center;
        font-size: 0.90em;
        font-weight: 400;
    }
    h1{
        font-size: 2.5em;
        font-weight: 500;
        text-align: center;
    }  
    h2{
        font-size: 1.2em;
        font-weight: 400;
        text-align: center;
    }
</style>
