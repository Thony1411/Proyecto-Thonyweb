---
interface Props {
    title: string;
    description: string;
    imgURL: string;
}
const { title, description, imgURL} = Astro.props
---
<div>
    <img src={ imgURL } alt="">
    <div>
        <h2> { title } </h2>
        <p> { description } </p>
    </div>
</div>

<style>
    img {
        width: 100%;
        height: 250;
        object-fit: cover;
    }
    p{
		color: gray;
	}
</style>