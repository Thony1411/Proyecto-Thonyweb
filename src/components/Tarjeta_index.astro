---
interface Props {
    title: string;
    description: string;
    imgURL: string;
}
const { title, description, imgURL} = Astro.props
---
<div class="tarjeta">
    <img src={ imgURL } alt="">
    <div>
        <h2> { title } </h2>
        <p> { description } </p>
    </div>
</div>

<style>
    img {
        width: 100%;
        height: 250;
        object-fit: cover;
        border-radius: 15px;
        transition: transform 0.3s ease-in-out;
    }
    p{
        color: gray;
    }
    div.tarjeta{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        flex-basis: 330px; 
        gap: 24px;
    }
    .tarjeta img:hover{
         transform: scale(1.1);
    }
</style>