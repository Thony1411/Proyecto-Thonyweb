---
import { Icon } from "astro-icon/components";
---

<header>
    <nav class="barra">
        <div class="logo">
            <a href="/"
                ><Icon name="logos:shopify" width="56" height="56" />
            </a>
            <ul class="enlaces">
                <li><a class="text" href="/solutions">Soluciones <Icon name="tabler:caret-down-filled" width="16" height="16"/></a></li>
                <li><a class="text" href="/prices">Precios</a></li>
                <li><a class="text" href="/resources">Recursos <Icon name="tabler:caret-down-filled" width="16" height="16"/></a></li>
            </ul>
        </div>
        <div class="botones">
            <button class="login">Iniciar Sesion</button>
            <button>Comienza Gratis</button>
        </div>
    </nav>
</header>

<style>
    .logo {
        display: flex;
        align-items: center;
        gap: 32px;
    }
    .barra {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px 60px;
        background-color: white;
    }
    .enlaces {
        display: flex;
        gap: 24px;
    }
    .enlaces a {
        font-weight: 600;
    }
    .botones button{
        background-color: black;
        color: white;
        padding: 12px;
        border-radius: 30px;
        font-weight: 700;
        border: transparent 2px;
    }
    .botones button.login {
        background-color: white;
        color: black;
    }
    button{
        transition: opacity 0.3s ease-in;
        transition: text-decoration 0.3s ease-in;
    }
    button:hover{
        opacity: 0.8;
    }
    a.text:hover{
        opacity: 0.9;
        text-decoration: underline; 
    }
    button.login:hover{
        opacity: 0.9;
        text-decoration: underline; 
    }
</style>
